<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy_blue"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/ic_back"
            android:tint="@color/white"
            android:contentDescription="Back" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FB"
            android:textColor="@color/gold_yellow"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FITBUDDY"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvExperienceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Fitness Experience?"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBeginner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:text="Beginner"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:backgroundTint="#33FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvExperienceTitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnIntermediate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="Intermediate"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:backgroundTint="#33FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnBeginner" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAdvanced"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="Advanced"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:backgroundTint="#33FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnIntermediate" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Continue"
        android:textColor="@color/navy_blue"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
