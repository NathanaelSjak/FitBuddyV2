<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitBuddy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorPrimaryVariant">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gold_yellow</item>
        <item name="colorSecondaryVariant">@color/gold_yellow</item>
        <item name="colorOnSecondary">@color/navy_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/navy_blue</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@color/navy_blue</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>
